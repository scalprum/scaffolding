{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"],
    "noPropertyAccessFromIndexSignature": false,
    "composite": true,
    "declaration": true,
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
  ]
}
