{
  "name": "build-utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/build-utils/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/build-utils",
        "main": "packages/build-utils/src/index.ts",
        "tsConfig": "packages/build-utils/tsconfig.lib.json",
        "assets": [
          "packages/build-utils/*.md",
          {
            "input": "./packages/build-utils/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/build-utils/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/build-utils",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/build-utils",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/build-utils/**/*.ts", "packages/build-utils/package.json", "packages/build-utils/executors.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/build-utils/jest.config.ts"
      }
    }
  }
}
